<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/characterListFragment">

    <fragment
        android:id="@+id/characterListFragment"
        android:name="com.pekyurek.marvelcomics.ui.character.list.CharacterListFragment"
        tools:layout="@layout/fragment_character_list">

        <action
            android:id="@+id/action_characterListFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="com.pekyurek.marvelcomics.ui.character.detail.CharacterDetailFragment"
        tools:layout="@layout/fragment_character_detail">

        <argument
            android:name="arg_character_detail"
            app:argType="com.pekyurek.marvelcomics.domain.model.character.Character"
            app:nullable="false" />
    </fragment>


</navigation>